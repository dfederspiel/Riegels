mixin events
    .events
        script#entry-template(type='text/x-handlebars-template').
            {{#each items}}
                <div class="panel">
                    <div class="entry">
                        <h2>{{summary}}</h2>
                        <div class="body">
                            Created: {{formatDate created}}<br />
                            Begins: {{formatDate start.dateTime}}<br />
                            Ends: {{formatDate end.dateTime}}<br />
                            Description: {{description}}<br />
                            Location: {{location}}<br />
                        </div>
                    </div>
                </div>
            {{/each}}
