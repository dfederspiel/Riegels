    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}"
        },
        {
            "name": "Gulp Watch Debugger",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/Riegels.Templates/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": ["watch"],
            "cwd": "${workspaceRoot}/Riegels.Templates",
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "internalConsole",
        }
    ]
}